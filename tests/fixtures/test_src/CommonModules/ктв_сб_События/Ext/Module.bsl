	Если НЕ ТипЗнч(ТочкаВозникновения) = Тип("СправочникСсылка.ктв_сб_СобытияТочкиВозникновения") Тогда
		ТочкаВозникновения = Справочники.ктв_сб_СобытияТочкиВозникновения.ЭтаИБ;
