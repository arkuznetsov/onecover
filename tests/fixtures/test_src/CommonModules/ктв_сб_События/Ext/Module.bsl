	ПараметрыОбработчика.Добавить(Обработчик);
	ПараметрыОбработчика.Добавить(ПараметрыСобытия);
	
	ФоновыеЗадания.Выполнить("ктв_сб_События.ВыполнитьОбработчикСобытия",
							 ПараметрыОбработчика,
							 ИдСобытия + "_" + Обработчик.Ид,
